<UserControl x:Class="Medicom.Views.ItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:converters="clr-namespace:Infrastructure.Common.Windows.Converters;assembly=Infrastructure.Common"
             prism:ViewModelLocator.AutoWireViewModel="False">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="boolToVisibilityconverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding ItemTypeName}" />

        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal">
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Наименование:" />
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Name}" />
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Visibility="{Binding IsNote, Converter={StaticResource boolToVisibilityconverter}}">
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Содержание:" />
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Content}" />
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Visibility="{Binding IsWebAccount, Converter={StaticResource boolToVisibilityconverter}}">
            <TextBlock Grid.Row="2" Grid.Column="0" Text="URL:" />
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Url}" />
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Visibility="{Binding IsCreditCard, Converter={StaticResource boolToVisibilityconverter}}">
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Дата окончания:" />
            <DatePicker Grid.Row="2" Grid.Column="1" SelectedDate="{Binding ExpirationDate}" />
        </StackPanel>

    </Grid>
</UserControl>
